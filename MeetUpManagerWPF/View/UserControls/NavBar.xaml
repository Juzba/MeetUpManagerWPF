<UserControl x:Class="MeetUpManagerWPF.View.UserControls.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeetUpManagerWPF.View.UserControls"
             mc:Ignorable="d" 
             Height="70" d:DesignWidth="800">
    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="44"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Background="#196774" Foreground="White">
            <MenuItem Header="File" FontSize="16">
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="16"></MenuItem>
        </Menu>
        <Grid Background="#196774" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"></ColumnDefinition>
                <ColumnDefinition Width="140"></ColumnDefinition>
                <ColumnDefinition Width="140"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="140"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Margin="5" FontSize="18"  Content="Přidat událost"></Button>
            <Button Grid.Column="1" Margin="5" FontSize="18"  Content="DashBoard"></Button>
            <Button Grid.Column="2" Margin="5" FontSize="18"  Content="Kalendář"></Button>
            <Button Grid.Column="4" Margin="5" FontSize="18" Name="Button_Login" Click="Button_Login_Click" Content="Login"></Button>
        </Grid>
    </Grid>
</UserControl>
