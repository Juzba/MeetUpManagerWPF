<UserControl x:Class="CustomFormWPF.View.UserControls.LoginForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomFormWPF.View.UserControls"
             xmlns:UserControls="clr-namespace:CustomFormWPF.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <StackPanel Width="250" Margin="5">
            <TextBlock Margin="20" HorizontalAlignment="Center" Text="Login" FontWeight="Bold" FontSize="25"></TextBlock>
            <UserControls:InputText MyPlaceHolder="Jméno"  Margin="10" ></UserControls:InputText>
            <UserControls:InputText MyPlaceHolder="Heslo"  Margin="10" ></UserControls:InputText>
            <Button Margin="10" Height="35" Width="150" Content="Přihlásit se"></Button>
        </StackPanel>
    </Grid>
</UserControl>
